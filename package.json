{
  "name": "ok-clothes-server",
  "version": "0.1.0",
  "description": "The express server of the app",
  "main": "server.js",
  "scripts": {
    "test": "env-cmd -f .env.test jest --detectOpenHandles --verbose",
    "dev": "nodemon --files src/server.ts",
    "dev2": "nodemon --watch src/**/* -e ts,json --exec node --inspect-brk -r ts-node/register src/server.ts",
    "build": "tsc",
    "lint:ts": "eslitn . --ext .ts",
    "lint:js:ts": "npm run lint:ts -- --fix",
    "test:related": "env-cmd -f .env.test jest --bail --findRelatedTest"
  },
  "author": "Rafael Calderon",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@jest/types": "^26.6.2",
    "@types/cors": "^2.8.10",
    "@types/jest": "^26.0.20",
    "@types/sequelize": "^4.28.9",
    "@types/supertest": "^2.0.10",
    "@types/validator": "^13.1.3",
    "apollo-server-express": "^2.21.2",
    "babel-jest": "^26.6.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "env-cmd": "^10.1.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.4",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.6.2",
    "supertest": "^6.1.3",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.34",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1"
  },
  "husky":{
    "hooks":{
      "precommit": "lint-staged"
    }
  },
  "lint-staged":{
    "**/*.ts":[
      "npm run lint:js", "npm run test:related","git add"
    ]
  }
}
